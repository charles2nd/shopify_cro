{
  "name": "shopify-cro-copilot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"(unit|\\.test\\.)\" --testPathIgnorePatterns=\"integration|e2e\" --coverage=false",
    "test:integration": "jest --testPathPattern=\"integration\" --passWithNoTests --coverage=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watchAll",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:ci": "npm run test:coverage -- --ci --coverage --watchAll=false --passWithNoTests=false && npm run test:e2e",
    "test:coverage:check": "npm run test:coverage && node scripts/check-coverage.js",
    "precommit": "node scripts/pre-commit-hook.js",
    "tdd": "node scripts/tdd-workflow.js",
    "tdd:red": "node scripts/tdd-workflow.js red",
    "tdd:green": "node scripts/tdd-workflow.js green",
    "tdd:refactor": "node scripts/tdd-workflow.js refactor",
    "tdd:check": "node scripts/tdd-workflow.js check",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.6.0",
    "@prisma/client": "^5.22.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "autoprefixer": "^10.4.20",
    "next": "^14.2.13",
    "openai": "^4.63.0",
    "playwright": "^1.47.2",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.13",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.13",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
