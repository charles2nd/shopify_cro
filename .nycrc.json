{
  "extends": "@istanbuljs/nyc-config-typescript",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.d.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/index.ts",
    "src/**/index.tsx"
  ],
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov",
    "json-summary"
  ],
  "report-dir": "coverage",
  "cache": true,
  "all": true,
  "check-coverage": true,
  "statements": 90,
  "branches": 90,
  "functions": 90,
  "lines": 90
}